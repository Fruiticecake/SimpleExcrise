/* pages/shopIndex/shopIndex.wxss */
.container{
    background-color: white;
    margin-top: 35rpx;
}
.container-item{
    margin: 40rpx 35rpx;
    display: flex;
    flex-direction: row;
}
.say{
    font-size: smaller;
    font-weight: bold;
    margin-top: 15rpx;
}
.left-image{
    width: 182rpx;
    height: 186rpx;
    border-radius: 6%;
}
.among{
    margin-left: 25rpx;
    display: flex;
    flex-direction: column;
}
.name{
    font-size: large;
    font-weight: bold;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}
.score-appraise{
    font-size: smaller;
    font-weight: bold;
    color: #5f5f5f;
    margin-top: 15rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}
.location{
    font-size: smaller;
    margin-top: 15rpx;
    color: #9e9e9e;
    font-weight: bold;
}
.right{
    margin-left: 35rpx;
    font-size: smaller;
    font-weight: bold;
    color: #9e9e9e;
    position: relative;
    top: 106rpx;
    right: -10rpx;
    height: 40rpx;
}